<div id="post_show_content" class="skinny_wrapper wrapper_padding">
	<header>
		<p class="date"><%= @post.created_at.strftime('%A,%B,%d') %></p>
		<h1><%= @post.title %></h1>
		<hr>
	</header>
<div id="content">
<%= markdown @post.content %>
<div>
<% if user_signed_in? %>
  <div id="admin_links">
  	<%= link_to "Edit Article", edit_post_path(@post) %>
  	<%= link_to "Delete Article", post_path(@post), method: :delete, data: {confirm: "Are you Sure?"}%>
  </div>

	<% end %>
<hr>

<div id="share_box">
	<a href="http://twitter.com/raviranjan" target="_blank"><i class="fa fa-twitter"></i></a>
			<a href="http://dribbble.com/raviranjan" target="_blank"><i class="fa fa-dribbble"></i></a>
			<a href="http://github.com/raviranjan" target="_blank"><i class="fa fa-github"></i></a>
    </div>
<hr>

<%= render 'disqus' %>
</div>
<br>
